{
  "name": "ts-app",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akihiro-tj/ts-app.git"
  },
  "private": true,
  "scripts": {
    "start": "yarn run rm:dist && parcel src/index.html --dist-dir dist --port 8000",
    "build": "yarn run rm:public && parcel build src/index.html --dist-dir public --no-source-maps --public-url /ts-app/public",
    "rm:dist": "rm -rf dist && mkdir dist && cp -rf src/assets dist",
    "rm:public": "rm -rf public && mkdir public && cp -rf src/assets public",
    "lint": "yarn run lint:ts & yarn run lint:scss",
    "fix": "yarn run fix:ts & yarn run fix:scss",
    "lint:ts": "eslint 'src/**/*.{js,ts}'",
    "lint:scss": "stylelint 'src/**/*.{css,scss}'",
    "fix:ts": "eslint 'src/**/*.{js,ts}' --fix",
    "fix:scss": "stylelint 'src/**/*.{css,scss}' --fix",
    "upgrade:latest": "yarn upgrade-interactive --latest"
  },
  "dependencies": {
    "core-js": "^3.7.0",
    "regenerator-runtime": "^0.13.5"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@parcel/transformer-sass": "2.0.0-nightly.645",
    "@parcel/transformer-typescript-tsc": "2.0.0-nightly.645",
    "@parcel/validator-typescript": "2.0.0-nightly.645",
    "@types/node": "^14.14.6",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "autoprefixer": "^10.2.5",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "parcel": "^2.0.0-nightly.643",
    "postcss": "^8.2.10",
    "prettier": "^2.1.1",
    "sass": "^1.29.0",
    "stylelint": "^13.7.0",
    "stylelint-config-recess-order": "^2.1.0",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.18.0",
    "tailwindcss": "^2.1.1",
    "typescript": "^4.0.5"
  }
}
